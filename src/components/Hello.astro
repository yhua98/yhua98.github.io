<style is:inline>
    @property --angle {
        syntax: "<angle>";
        inherits: false;
        initial-value: 0deg;
    }

    .hello::before {
        --border-width: 3px;
        background-image: conic-gradient(
            from var(--angle),
            var(--accent-200) 0%,
            var(--accent-100) 100%
        );
        animation: rotate-deg 1s linear forwards infinite;
    }

    @keyframes rotate-deg {
        0% {
            --angle: 0deg;
        }

        100% {
            --angle: 360deg;
        }
    }

    @keyframes waving {
        0% {
            transform: rotateZ(-30deg);
        }

        50% {
            transform: rotateZ(30deg);
        }

        100% {
            transform: rotateZ(-30deg);
        }
    }
</style>
