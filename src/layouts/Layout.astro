---
import Header from "../components/Header.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>
<style lang="scss" is:global>
	@media (prefers-color-scheme: dark) {
		:root {
			--primary-100: #0085ff;
			--primary-200: #69b4ff;
			--primary-300: #e0ffff;
			--accent-100: #006fff;
			--accent-200: #e1ffff;
			--text-100: #ffffff;
			--text-200: #9e9e9e;
			--bg-100: #1e1e1e;
			--bg-150: #1e2129;
			--bg-200: #2d2d2d;
			--bg-300: #454545;
		}
	}
	@media (prefers-color-scheme: light) {
		:root {
			--primary-100: #d4eaf7;
			--primary-200: #b6ccd8;
			--primary-300: #3b3c3d;
			--accent-100: #71c4ef;
			--accent-200: #00668c;
			--text-100: #1d1c1c;
			--text-200: #313d44;
			--bg-100: #fffefb;
			--bg-150: #e5eaea;
			--bg-200: #f5f4f1;
			--bg-300: #cccbc8;
		}
	}
	html {
		font-family: system-ui, sans-serif;
		background: var(--bg-100);
		background-size: 224px;
		color: var(--text-100);
	}
	* {
		box-sizing: border-box;
	}
</style>
